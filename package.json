{
	"name": "es-only",
	"type": "module",
	"version": "0.1.0",
	"description": "Runtime-specific imports for modern JavaScript environments - Bun, Deno, Node.js, server-only, and more",
	"author": "ryoppippi",
	"license": "MIT",
	"funding": "https://github.com/ryoppippi/es-only?sponsor=1",
	"homepage": "https://github.com/ryoppippi/es-only#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ryoppippi/es-only.git"
	},
	"bugs": {
		"url": "https://github.com/ryoppippi/es-only/issues"
	},
	"exports": {
		"./browser": {
			"browser": "./src/empty.js",
			"default": "./src/browser.error.js"
		},
		"./bun": {
			"bun": "./src/empty.js",
			"default": "./src/bun.error.js"
		},
		"./deno": {
			"deno": "./src/empty.js",
			"default": "./src/deno.error.js"
		},
		"./node": {
			"node": "./src/empty.js",
			"default": "./src/node.error.js"
		},
		"./server-only": {
			"react-server": "./src/empty.js",
			"default": "./src/server-only.error.js"
		}
	},
	"files": [
		"LICENSE",
		"README.md",
		"src"
	],
	"scripts": {
		"format": "bun run lint --fix",
		"lint": "publint && eslint --cache .",
		"prepack": "bun clean-pkg-json -r scripts.preinstall",
		"prepare": "git config --local core.hooksPath .githooks",
		"release": "bun lint && bumpp"
	},
	"devDependencies": {
		"@ryoppippi/eslint-config": "^0.4.0",
		"@types/bun": "latest",
		"bumpp": "^10.4.0",
		"clean-pkg-json": "^1.3.0",
		"eslint": "^9.39.2",
		"eslint-plugin-format": "^1.2.0",
		"lint-staged": "^16.2.7",
		"publint": "^0.3.17",
		"sort-package-json": "^3.6.0"
	},
	"lint-staged": {
		"*": [
			"eslint --cache --fix"
		],
		"package.json": [
			"sort-package-json"
		]
	}
}
